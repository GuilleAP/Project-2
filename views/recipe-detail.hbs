<h1>{{recipe.label}}</h1>
<img src="{{recipe.image}}" alt="{{recipe.label}} image">
<h2>{{recipe.ingredientLines.length}} Ingredients</h2>
<ul>
    {{#each recipe.ingredientLines}}
    <li>{{this}}</li>
    {{/each}}
</ul>
<h3>{{recipe.calories}} calories / serving</h3>
<h3>{{recipe.totalDaily.ENERC_KCAL.quantity}} % daily value</h3>
<form method="get" action="{{recipe.url}}">
 <button type="submit">See full recipe</button>
</form>
{{#each recipe.totalNutrients}}
    {{#if this.displayAsList}}
        <li>{{this.label}}: {{this.quantity}}</li>
    {{else}}
        <h3>{{this.label}}: {{this.quantity}}</h3>
    {{/if}}
    
{{/each}}



